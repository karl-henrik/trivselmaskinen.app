<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
					   xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
					   x:Class="Trivselappen.Views.QuestionView">
  <StackLayout BackgroundColor="Red">
    <Label Text="{Binding TodaysQuestion}" VerticalOptions="Center" Font="Large" HorizontalOptions="Center"/>
    <Button Text="Röd" Command="{Binding Register1}"/>
    <Button Text="Orange" Command="{Binding Register2}"/>
    <Button Text="Gul" Command="{Binding Register3}"/>
    <Button Text="Grön" Command="{Binding Register4}"/> 
    <Label Text="{Binding Greeting}" Font="Large"/>
  </StackLayout>
</ContentPage>